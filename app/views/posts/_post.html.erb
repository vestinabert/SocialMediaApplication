<div id="<%= dom_id post %>">

<div class="card" style="width: 18rem;">
  <div class="card-header bg-white">
  <% if post.user.profile_picture.attached? %>
    <%= image_tag post.user.profile_picture, class: "img-thumbnail rounded-circle", style: "width: 10%" %>
    <% else %>
      <%= image_tag 'user-pp.jpg', class: "img-thumbnail rounded-circle", style: "width: 10%" %>
    <% end %>
    <%= post.user.username %>
  </div>
  <% image_tag post.images.last, class: "card-img-top" %>
  <div class="card-body">
    <p class="card-text"><%= post.caption %></p>
  </div>
  <div class="card-footer">
    Featured
  </div>
</div>

</div>
