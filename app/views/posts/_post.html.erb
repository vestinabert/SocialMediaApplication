<div id="<%= dom_id post %>">

<div class="card" style="width: 25rem;">
  <div class="card-header bg-white">
    <div class="d-flex justify-content-between">
      <div>
        <% if post.user.profile_picture.attached? %>
            <%= image_tag post.user.profile_picture, class: "img-thumbnail rounded-circle", style: "width: 10%" %>
        <% else %>
          <%= image_tag 'user-pp.jpg', class: "img-thumbnail rounded-circle", style: "width: 10%" %>
        <% end %>
        <span class="fw-bold mx-2"><%= post.user.username %></span>
      </div>

    <div>
      <div class="dropdown">
        <a class="text-dark" style="text-decoration:none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          ...
        </a>

        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#">Edit post</a></li>
          <li><a class="dropdown-item" href="#">Delete post</a></li>        
        </ul>
      </div>
    </div>

  </div>
</div>
    <% image_tag post.images.last, class: "card-img-top" %>
    <div class="card-body">
      <p class="card-text"><%= post.caption %></p>
    </div>
    <div class="card-footer">
      Featured
    </div>
  
